<script>
  riot.compile(() => riot.mount('*'));

  // Utility function needed for debouncing keyup
  function debounce(fn) {
    let timeoutID;
    return function () {
      const args = arguments;
      clearTimeout(timeoutID);
      timeoutID = setTimeout(() => fn(...args), 250);
    }
  }
</script>
